<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/base_color</item>
        <item name="android:windowAnimationStyle">@style/NoAnimationTheme</item>
    </style>

    <!--启动页（包括闪屏+Guide）主题-->
    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_720px_1280px</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/base_color</item>
        <item name="android:windowAnimationStyle">@style/NoAnimationTheme</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/NoAnimationTheme</item>

    </style>

    <!-- 取消界面转场动画使用-->
    <style name="NoAnimationTheme">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <!-- toolbar弹出菜单样式 -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorBackground">#FFFFFFFF</item>
    </style>

    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 管家模块 -->
    <style name="StewardCardTitle">
        <item name="android:paddingTop">13dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StewardCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPaddingBottom">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AddHouseInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/ic_down_gray_56px</item>
        <item name="android:textColor">@color/accent_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Picker模块-->
    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingLeft">11sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cp_gray</item>
    </style>

    <!--TextView字体样式-->
    <style name="TvBoldBlackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TvBaseBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_black</item>
    </style>

    <style name="TvGreyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="TvGreyText15sp" parent="TvGreyText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TvGreyText13sp" parent="TvGreyText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TvBaseBlack15sp" parent="TvBaseBlack">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TvBaseBlack16sp" parent="TvBaseBlack">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TvWhiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TvBaseBlack14sp" parent="TvBaseBlack">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TvWhite13sp" parent="TvWhiteText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TvWhite20sp" parent="TvWhiteText">
        <item name="android:textSize">20sp</item>
    </style>

    <!--“Mine”控件样式-->
    <style name="MineItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MineItemIconStyle">
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="MineItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MineItemRedPointerStyle">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_solid_red_pointer</item>
    </style>

    <style name="MineItemHorizontalSpace">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MineItemViewMoreStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/ic_arrow_right_gray_60px</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/base_grey</item>
    </style>

    <!--首页控件样式-->
    <style name="CommunityServiceLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--个人信息-->
    <style name="ItemStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="base_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/base_line</item>
    </style>

    <style name="EtBackgroundNullStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/accent_text</item>
        <item name="android:textColorHint">@color/default_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--自定义样式的RatingBar-->
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_rating_bar</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">13dp</item>
    </style>

    <!--todo(高亮) ssssssssssssssssssssssss 以下是S1的内容 sssssssssssssssssssssssssssss-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.LaunchTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/base_color</item>
        <item name="android:windowAnimationStyle">@style/NoAnimationTheme</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/NoAnimationTheme</item>
    </style>

    <!--通用-->
    <style name="NormalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/base_line</item>
    </style>

    <!---->
    <style name="LinearLayoutItemStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewBaseBlackStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextViewBaseColorWidthZeroWeightOneStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!--[更多]下的可复用Style-->
    <style name="MoreItem_LineStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:background">@color/base_line</item>
    </style>

    <style name="MoreItem_TitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MoreItem_LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!--[联动编辑]下的可复用Style-->
    <style name="LinkageEditItem_LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="LinkageEditItem_TitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LinkageEditItem_SelectTextStyle">
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">115dp</item>
        <item name="android:background">@drawable/shape_stroke_blue</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--录音弹框-->
    <style name="recordbutton_alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <!-- <item name="android:backgroundDimEnabled">false</item> -->
        <!-- 模糊 -->
    </style>


    <!--todo（高亮）ccccccccccccccccccc ConstraintLayout布局相关 cccccccccccccccccccccc-->
    <style name="CLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/base_line</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="CFormTextStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CFormEditStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CGoodsTypeGridLLStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CGoodsTypeGridTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
