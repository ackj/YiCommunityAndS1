<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_rv_park_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="1dp"
    app:contentPadding="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_rv_park_selector"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_park_white_75"
            android:tint="@color/base_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_item_rv_park_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:text="凯宾斯基停车场"
            android:textColor="@color/base_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_address_item_rv_park_selector"
            app:layout_constraintLeft_toRightOf="@+id/iv_item_rv_park_selector"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_address_item_rv_park_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="10dp"
            android:text="您家里的一切，让我来搞定！"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_item_rv_park_selector"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_item_rv_park_selector" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>