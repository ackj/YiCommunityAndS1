<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_park_payment_record_white_1020_960"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="25dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_park_white_75"
        android:tint="@color/default_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_park_item_recharge_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="1"
        android:text="凯宾斯基"
        android:textColor="@color/default_gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />


    <TextView
        android:id="@+id/tv_plate_item_recharge_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="粤"
        android:textColor="@color/default_gray"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <View
        android:id="@+id/view_line_0"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/base_gray"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plate_item_recharge_record" />

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="订单号"
        android:textColor="@color/default_gray"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/view_line_0" />

    <TextView
        android:id="@+id/tv_pay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="有效时间"
        android:textColor="@color/default_gray"
        app:layout_constraintLeft_toLeftOf="@+id/tv_order_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_number" />

    <TextView
        android:id="@+id/tv_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="充值金额"
        android:textColor="@color/default_gray"
        app:layout_constraintLeft_toLeftOf="@+id/tv_pay_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_time" />

    <TextView
        android:id="@+id/tv_order_item_recharge_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/base_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_number"
        app:layout_constraintRight_toRightOf="@+id/view_line_0" />

    <TextView
        android:id="@+id/tv_pay_time_item_recharge_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/base_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pay_time"
        app:layout_constraintRight_toRightOf="@+id/view_line_0" />

    <TextView
        android:id="@+id/tv_charge_item_recharge_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/base_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_charge"
        app:layout_constraintRight_toRightOf="@+id/view_line_0" />

    <TextView
        android:id="@+id/tv_recharge_time_item_recharge_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="时间"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_charge" />

</android.support.constraint.ConstraintLayout>