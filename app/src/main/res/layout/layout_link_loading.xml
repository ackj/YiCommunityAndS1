<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_round_white"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_link_loading"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/bg_camera_scan_810px" />

            <TextView
                android:id="@+id/tv_count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="60"
                android:textColor="@color/s1_base_color"
                android:textSize="35sp" />
        </FrameLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="提示：请将手机音量调至最大,并靠近设备30CM以内，保证成功率"
            android:textColor="@color/red_text"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_solid_basecolor"
            android:text="停止配网"
            android:textColor="@color/white" />

    </LinearLayout>
</FrameLayout>