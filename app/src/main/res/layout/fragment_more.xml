<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/sv_more_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_more_avatar_black_180px" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:textColor="@color/base_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nickname"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View style="@style/MoreItem_LineStyle" />

            <LinearLayout
                android:id="@+id/ll_wifi_setting"
                style="@style/MoreItem_LinearLayoutStyle">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_wifi_setting_69_69" />

                <TextView
                    style="@style/MoreItem_TitleStyle"
                    android:text="主机配网" />
            </LinearLayout>

            <View style="@style/MoreItem_LineStyle" />

            <LinearLayout
                android:id="@+id/ll_add_host"
                style="@style/MoreItem_LinearLayoutStyle">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_add_host_69_69" />

                <TextView
                    style="@style/MoreItem_TitleStyle"
                    android:text="添加主机" />
            </LinearLayout>

            <View style="@style/MoreItem_LineStyle" />

            <LinearLayout
                android:id="@+id/ll_host_manager"
                style="@style/MoreItem_LinearLayoutStyle">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_host_manager_69_69" />

                <TextView
                    style="@style/MoreItem_TitleStyle"
                    android:text="主机管理" />
            </LinearLayout>

            <View style="@style/MoreItem_LineStyle" />

            <LinearLayout
                android:id="@+id/ll_room_manager"
                style="@style/MoreItem_LinearLayoutStyle">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_room_69_69" />

                <TextView
                    style="@style/MoreItem_TitleStyle"
                    android:text="房间管理" />
            </LinearLayout>


            <!--<View style="@style/MoreItem_LineStyle" />

            <LinearLayout
                android:id="@+id/ll_authorization"
                style="@style/MoreItem_LinearLayoutStyle">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_room_69_69" />

                <TextView
                    style="@style/MoreItem_TitleStyle"
                    android:text="授权" />
            </LinearLayout>-->

            <View style="@style/MoreItem_LineStyle" />

            <LinearLayout
                android:id="@+id/ll_about"
                style="@style/MoreItem_LinearLayoutStyle">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_about_69_69" />

                <TextView
                    style="@style/MoreItem_TitleStyle"
                    android:text="关于" />
            </LinearLayout>

            <View style="@style/MoreItem_LineStyle" />

            <LinearLayout
                android:id="@+id/ll_logout"
                style="@style/MoreItem_LinearLayoutStyle">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_logout_69_69" />

                <TextView
                    style="@style/MoreItem_TitleStyle"
                    android:text="注销登录" />
            </LinearLayout>

            <View style="@style/MoreItem_LineStyle" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>