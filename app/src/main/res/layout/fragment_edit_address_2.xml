<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tb"
        layout="@layout/toolbar" />

    <View
        android:id="@+id/line_1"
        style="@style/CLineStyle"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/tb" />

    <TextView
        android:id="@+id/tv_1"
        style="@style/CFormTextStyle"
        android:text="联系人"
        app:layout_constraintTop_toBottomOf="@id/line_1" />

    <EditText
        style="@style/CFormEditStyle"
        android:hint="收货人姓名"
        app:layout_constraintLeft_toRightOf="@id/tv_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_1" />

    <View
        android:id="@+id/line_2"
        style="@style/CLineStyle"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <TextView
        android:id="@+id/tv_2"
        style="@style/CFormTextStyle"
        android:text="手机号码"
        app:layout_constraintTop_toBottomOf="@id/line_2" />

    <EditText
        style="@style/CFormEditStyle"
        android:hint="联系人手机号码"
        app:layout_constraintLeft_toRightOf="@id/tv_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_2" />

    <View
        android:id="@+id/line_3"
        style="@style/CLineStyle"
        app:layout_constraintTop_toBottomOf="@id/tv_2" />

    <TextView
        android:id="@+id/tv_3"
        style="@style/CFormTextStyle"
        android:text="收货地址"
        app:layout_constraintTop_toBottomOf="@id/line_3" />

    <EditText
        style="@style/CFormEditStyle"
        android:hint="选择您的住宅小区，办公地址大厦"
        app:layout_constraintLeft_toRightOf="@id/tv_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_3" />

    <View
        android:id="@+id/line_4"
        style="@style/CLineStyle"
        app:layout_constraintTop_toBottomOf="@id/tv_3" />

    <TextView
        android:id="@+id/tv_4"
        style="@style/CFormTextStyle"
        android:text="详细地址"
        app:layout_constraintTop_toBottomOf="@id/line_4" />

    <EditText
        style="@style/CFormEditStyle"
        android:hint="请输入门牌号码等详细信息"
        app:layout_constraintLeft_toRightOf="@id/tv_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_4" />

    <View
        style="@style/CLineStyle"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_4" />

</android.support.constraint.ConstraintLayout>