<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_des_security_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="15dp"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel_item_security_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/selector_disarmed"
            android:focusable="true"
            android:gravity="center"
            android:tag="cancel"
            android:text="撤防"
            android:textColor="@color/base_gray" />

        <TextView
            android:id="@+id/tv_home_item_security_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/selector_homedisarmed"
            android:focusable="true"
            android:gravity="center"
            android:tag="home"
            android:text="在家布防"
            android:textColor="@color/base_gray" />

        <TextView
            android:id="@+id/tv_faraway_item_security_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/selector_awaydisarmed"
            android:gravity="center"
            android:tag="faraway"
            android:text="离家布防"
            android:textColor="@color/base_gray" />

        <com.aglhz.s1.widget.RecordButton
            android:id="@+id/tv_message_item_security_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/selector_leavemessage"
            android:gravity="center"
            android:text="留言"
            android:textColor="@color/base_gray" />
    </LinearLayout>

</LinearLayout>