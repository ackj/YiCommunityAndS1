<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/line_1"
        style="@style/CLineStyle"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="亿社区克拉家园店"
        android:textColor="@color/base_black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="已取消"
        android:textColor="@color/red_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_1" />

    <View
        android:id="@+id/line_2"
        style="@style/CLineStyle"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_location" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cl_2"
        app:layout_constraintTop_toBottomOf="@id/line_2">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@color/base_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/cl_1"
        app:layout_constraintRight_toLeftOf="@+id/cl_3"
        app:layout_constraintTop_toBottomOf="@id/line_2">

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@color/base_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_3"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/cl_2"
        app:layout_constraintRight_toLeftOf="@+id/cl_4"
        app:layout_constraintTop_toBottomOf="@id/line_2">

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@color/base_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_4"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/cl_3"
        app:layout_constraintRight_toLeftOf="@+id/cl_5"
        app:layout_constraintTop_toBottomOf="@id/line_2">

        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@color/base_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_5"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toRightOf="@id/cl_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:drawableRight="@drawable/ic_arrow_right_30px"
            android:gravity="center"
            android:padding="5dp"
            android:text="共5件"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/line_3"
        style="@style/CLineStyle"
        app:layout_constraintBottom_toTopOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@id/cl_1" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="实付￥20.00"
        android:textColor="@color/base_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_3" />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_round_gray_border"
        android:text="删除订单"
        android:textColor="@color/default_text"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_price"
        app:layout_constraintRight_toLeftOf="@+id/btn_restart" />

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_round_red"
        android:text="重新下单"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_price"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>